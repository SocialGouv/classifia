meta {
  name: Get All Conversations
  type: http
  seq: 1
}

get {
  url: {{base_url}}/conversations?filter_resolved=1
  body: none
  auth: inherit
}

params:query {
  filter_resolved: 1
}

script:post-response {
  const response = res.body.data
  const session_ids = response.map((r)=>r.session_id)
  console.log('REPONSE> ',session_ids)
}

docs {
  Récupère toutes les conversations depuis l'API Crisp.

  Paramètres:
  - filter_resolved (query): Filtre pour les conversations résolues (1 = oui, 0 = non)

  Retourne une liste de conversations avec leurs session_ids.
}

settings {
  encodeUrl: true
}

